<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Prezencka.MainPage"
             Shell.NavBarIsVisible="false">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label
            x:Name="clock_big"
            Grid.Row="1" 
            Text="clock"
            HorizontalOptions="Center"
            FontSize="60"/>
        <Label
            x:Name="reminder"
            Grid.Row="2" 
            Text="reminder"
            HorizontalOptions="Center"
            FontSize="Small"/>

        <Button
            Text="PRÍCHOD"
            Grid.Row="3"
            WidthRequest="220"
            Command="{Binding TapCommand}"
            HorizontalOptions="Center"
            FontSize="30"/>
        <Button
            Text="PRESTÁVKA"
            Grid.Row="4"
            WidthRequest="220"
            Command="{Binding TapCommand}"
            HorizontalOptions="Center"
            FontSize="30"/>

        <Button
            Text="ODCHOD"
            Grid.Row="5"
            WidthRequest="220"
            Command="{Binding TapCommand}"
            HorizontalOptions="Center"
            FontSize="30"/>

        <Button
            Text="VLASTNÝ ČAS"
            Grid.Row="6"
            WidthRequest="220"
            Command="{Binding TapCommand}"
            HorizontalOptions="Center"
            FontSize="30"/>
        <Image
            Grid.Row="7"
            HorizontalOptions="Center"
            Source="logo_light.png"
            HeightRequest="220"
            WidthRequest="220"/>

    </Grid>

</ContentPage>